# Training MLX - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to git - they contain secrets!

# =============================================================================
# üîê LLM PROVIDER API KEYS
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2048

# Anthropic (Claude) Configuration  
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-haiku-20240307
ANTHROPIC_MAX_TOKENS=2048

# Together AI Configuration
TOGETHER_API_KEY=your_together_api_key_here
TOGETHER_MODEL=meta-llama/Llama-2-7b-chat-hf
TOGETHER_MAX_TOKENS=2048

# Hugging Face Configuration
HF_TOKEN=your_hugging_face_token_here
HF_MODEL=microsoft/DialoGPT-medium

# =============================================================================
# üñ• LOCAL INFERENCE SETTINGS
# =============================================================================

# Ollama Configuration (Local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2
OLLAMA_TIMEOUT=30

# MLX Local Model Configuration
MLX_MODEL_PATH=mlx-community/Qwen2.5-0.5B-Instruct-4bit
MLX_MAX_TOKENS=2048
MLX_DEVICE=auto

# =============================================================================
# üöÄ API SERVER CONFIGURATION
# =============================================================================

# Server Settings
API_HOST=0.0.0.0
API_PORT=8200
API_WORKERS=1
API_RELOAD=false

# CORS Settings (for web frontends)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_CREDENTIALS=true

# =============================================================================
# üìä LOGGING AND MONITORING
# =============================================================================

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=api.log

# Weights & Biases (WandB)
WANDB_API_KEY=your_wandb_api_key_here
WANDB_PROJECT=training-mlx
WANDB_ENTITY=your_wandb_entity_here

# TensorBoard
TENSORBOARD_LOG_DIR=./tensorboard_logs
TENSORBOARD_PORT=6006

# =============================================================================
# üéØ TRAINING CONFIGURATION
# =============================================================================

# Default Training Settings
DEFAULT_BATCH_SIZE=4
DEFAULT_LEARNING_RATE=1e-4
DEFAULT_MAX_EPOCHS=3
DEFAULT_GRADIENT_ACCUMULATION_STEPS=4

# Model Storage
MODEL_CACHE_DIR=./model_cache
CHECKPOINT_DIR=./checkpoints
TRAINING_DATA_DIR=./data

# Hardware Settings
MLX_DEVICE_COUNT=1

# =============================================================================
# üîó TEAM A INTEGRATION (OPTIONAL)
# =============================================================================

# Team A's Distributed Inference Settings
TEAM_A_API_BASE_URL=http://localhost:8100
TEAM_A_GRPC_HOST=localhost
TEAM_A_GRPC_PORT=50051
TEAM_A_TIMEOUT=30

# =============================================================================
# üõ° SECURITY SETTINGS
# =============================================================================

# API Security
API_SECRET_KEY=your_super_secret_key_here_change_this
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_EXPIRY_HOURS=24

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# =============================================================================
# üß™ DEVELOPMENT SETTINGS
# =============================================================================

# Development Mode
DEBUG=false
DEVELOPMENT_MODE=false

# Testing Configuration
TEST_API_KEY=test_api_key_for_testing_only

# =============================================================================
# üîç INSTRUCTIONS
# =============================================================================

# 1. Copy this file to .env: cp .env.example .env
# 2. Fill in your actual values (remove the placeholder text)
# 3. NEVER commit .env to git - it's in .gitignore for security
# 4. Set only the variables you need - many are optional
# 5. Restart the API server after changing environment variables

# SECURITY REMINDER:
# - Use strong, unique passwords and API keys
# - Rotate keys regularly
# - Never share .env files or commit them to version control
# - Use different keys for development, staging, and production